<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="@color/shade5"
    tools:context="com.example.monique.hrpaknjiga.activities.HistoryActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activityTitle"
        android:text="Knjižnice i knjižare u blizini"
        android:textColor="@color/dirty_white"
        android:textSize="20sp"
        android:padding="18dp"
        android:background="@color/shade5"/>


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_below="@id/activityTitle"/>


</RelativeLayout>